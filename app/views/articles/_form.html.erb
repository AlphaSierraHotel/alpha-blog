<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
    <div class="form-group row">
      <div class="col-form-label col-md-2">
        <%= f.label :title, class: "col-form-label" %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-form-label col-md-2">
        <%= f.label :description, class: "col-form-label" %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "body of article" %>
      </div>
    </div>
    <div class="row offset-2 col-8 mt-1">
      <div class="form-group form-check form-inline">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "form-check-label pr-2") {cb.check_box(class: "form-check-input") + cb.text} %>
        <% end %>
      </div>
    </div>
    <div class="form-group row mt-2">
      <div class="offset-md-2 col-md-8">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
  <div class="col-md-6 offset-md-3 mt-2">
    <small>
      <%= link_to "[Cancel request and return to articles listing]", articles_path %>
    </small>
  </div>
</div>
</div>
