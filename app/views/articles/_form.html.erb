<% if @article.errors.any? %>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="alert alert-danger alert-dismissible fade show">
        <h5 class="alert-heading">
          <%= pluralize(@article.errors.count, "error") %>
          prohibited this article from being saved:
        </h5>
        <ul class="mb-0">
          <%= @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article do |f| %>
      <div class="form-group row">
        <div class="col-form-label col-md-2">
          <%= f.label :title, class: "col-form-label" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-md-2">
          <%= f.label :description, class: "col-form-label" %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "body of article" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-md-2 col-md-8">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-4 offset-sm-4">
      <%= link_to "[ Cancel request and return to articles listing ]", articles_path %>
    </div>
  </div>
</div>
